{
  "patches": [
    {
      "file": "/server/plugins/luckperms/config.yml",
      "ops": [
        {
          "$set": {
            "path": "$.storage-method",
            "value": "postgresql"
          }
        },
        {
          "$set": {
            "path": "$.data.address",
            "value": "db"
          }
        },
        {
          "$set": {
            "path": "$.data.database",
            "value": "ontime_docker_compose"
          }
        },
        {
          "$set": {
            "path": "$.data.username",
            "value": "ontime_docker_compose"
          }
        },
        {
          "$set": {
            "path": "$.data.password",
            "value": "ontime_docker_compose"
          }
        }
      ]
    }
  ]
}
